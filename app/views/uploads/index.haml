- if can? :upload_files, @current_project
  - if @upload.errors.empty?
    .text_actions
      = link_to content_tag(:span, t('.new_file')), new_project_upload_path(@current_project), :class => 'add_button', :id => 'upload_file_button'

%h2= t('.title', :project => @current_project)

- if can? :upload_files, @current_project
  - if @upload.errors.empty?
    = render 'uploads/form', :project => @current_project, :upload => @upload, :page => nil
- else
  %p= t('.cant_create')

.uploads
  = render @uploads

