= render @uploads, :activity => false

- content_for :column do
  - if can? :upload_files, @current_project
    - if @upload.errors.empty?
      = link_to content_tag(:span, t('.new_file')), new_project_upload_path(@current_project), :class => 'add_button'
    = render 'uploads/form', :project => @current_project, :upload => @upload, :page => nil
    
    %p= t('.max_upload_size', :mb => Teambox.config.asset_max_file_size)
  - else
    %p= t('.cant_create')
