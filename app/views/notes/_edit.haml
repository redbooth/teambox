- remote_form_for [note.project,note.page,note], :loading => show_loading_note_form(note.id) do |f|
  = note_fields(f)
  .submit{ :id => "note_submit_#{note.id}" }
    = f.submit t('.submit')
    = t('common.or')
    = link_to_function 'Cancel', remove_form("note_#{note.id}")
  =loading('note_form',note.id)