%p= "Organizations group together #{link_to_doc_model(:project)}s and users (via #{link_to_doc_model(:membership)})."

- doc_for :index, :example => [@organization.to_api_hash] do
  %p= "Returns the most recent organizations you own or belong to."

- doc_for :show, :example => @organization.to_api_hash(:include => [:projects, :members, :people]) do
  %p= "Returns the data for a given organization"
  
- doc_for :create, :parameters => {:organization => {:name => 'Name', :permalink => 'organization'} },
                   :example => @organization.to_api_hash,
                   :status => :created do
  %p= "Creates a new organization"

- doc_for :update, :parameters => {:organization => {:name => @organization.name, :permalink => @organization.permalink} },
                   :status => :updated,
                   :role => [:admin, :owner] do
  %p= "Updates an organization"
