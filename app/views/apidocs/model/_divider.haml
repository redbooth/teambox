- doc_for :index,
          :example => example_api_wrap(@divider, :references => [:page]) do
  %p=raw "Returns the most recent dividers on a page."

- doc_for :show,
          :example => @divider.to_api_hash(:include => [:page_slot]) do
  %p=raw "Returns the data for a divider."
  
