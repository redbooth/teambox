%p= "A divider is a heading placed on a #{link_to_doc_model(:page)}."
%p= "Dividers belong in slots, which can be reordered using page#reorder."

- doc_for :index, :example => example_api_wrap(@divider, :references => [:page]) do
  %p= "Returns the most recent dividers on a page."

- doc_for :show,  :example => @divider.to_api_hash(:include => [:page_slot]) do
  %p= "Returns the data for a divider."
  
- doc_for :create, :parameters => {:note => {:name => 'Name'} },
                   :example => @divider.to_api_hash,
                   :status => :created,
                   :role => :participant do
  %p= "Creates a new divider."

- doc_for :update, :parameters => {:note => {:name => @divider.name} },
                   :status => :updated,
                   :role => :participant do
  %p= "Updates the name of a divider."

- doc_for :destroy, :status => :deleted,
                    :role => :participant do
  %p= "Destroys a divider."
