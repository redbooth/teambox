          :parameters => {:name => 'Name', :project_id => 123, :page_id => 123 },
          :example => @divider.to_api_hash,
          :status => :created,
          :role => :participant do
  %p=raw "Creates a new divider."

- doc_for :update,
          :parameters => {:name => @divider.name },
          :status => :updated,
          :role => :participant do
