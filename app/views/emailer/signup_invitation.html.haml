.email{ :style => email_global }

  = dont_answer

  %p= t('emailer.invitation.teambox_is_a_pm_platform')
  %p= t('emailer.invitation.plan_share_and_collaborate')

  .box{ :style => email_box }
    %p= t('emailer.invitation.collaborate_with', :name => h(@referral.name))
    %p{ :style => email_text(:big) }
      = t('emailer.invitation.you_have_been_invited_to', :project => content_tag(:b, h(@project.name)))
    %h2{ :style => email_text(:big) }
      = link_to t('emailer.invitation.accept_the_invitation'), new_user_url(:invitation => @invitation.token)
    %p
      %strong
        = t('emailer.invitation.current_users')
      = @project.people.collect { |p| h(p.name) }.to_sentence

  %p{ :style => email_text(:small) }
    = t('emailer.invitation.plaintext_link')
    %br
    = link_to new_user_url(:invitation => @invitation.token), new_user_url(:invitation => @invitation.token)

  .footer{ :style => email_text(:small) }
    %p= t('emailer.invitation.report_abuse')
