.email{ :style => email_global }
  %p{ :style => email_text(:small) }
    = t('emailer.common.do_not_answer')

  %p= t('emailer.reset_password.hey', :user_name => @user.name)

  .box{ :style => email_box }  
    %p= t('emailer.reset_password.follow_the_link')
    %h2{ email_text(:big) }
      = link_to t('emailer.reset_password.log_in'), @url

  %p{ :style => email_text(:small) }
    = t('emailer.reset_password.plaintext_link')
    %br
    = link_to @url, @url

  .footer{ :style => email_text(:small) }
    %p= t('emailer.reset_password.report_abuse', :email => @user.email)
    %p= t('emailer.reset_password.problems', :support => APP_CONFIG['support'])

