%h1= image_tag @organization.logo.url(:top), :alt => @organization.name

.custom_html
  = @organization.description.try(:html_safe) || "Configure this text by going editing your organization's preferences."

- content_for :column do
  = form_tag sites_path, :class => 'new_session', :id => 'new_session' do
    = hidden_field_tag :id, @organization.permalink
    = upgrade_browser
    = render 'sites/fields'
    = submit_tag t('.submit')
    = chrome_frame

  .signup_or_forgot_links
    %p= link_to t('sessions.fields.forgot'), forgot_password_path, :tabindex => 203
