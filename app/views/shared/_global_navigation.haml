#user_utilities
  %ol.global_navigation
    /= micro_avatar(current_user)
    %li.quick_add
      = link_to "New conversation", "#!/conversations/new" #, :class => 'quick_add_link'
      = link_to "New task", "#!/tasks/new" #, :class => 'quick_add_link'
      .pane{ :style => 'display: none' }
        = render 'tasks/form', :project => Project.first, :task_list => TaskList.first, :task => TaskList.first.tasks.build
    %li#username
    %li= link_to t('.settings'), account_settings_path
    - if current_user.invitations.pending_projects.count > 0
      %li= link_to_unless_current t('.project_invitations', :count => current_user.invitations.count),
        user_invitations_path(:user_id => current_user.id)
    %li= link_to t('.help'), "http://guide.teambox.com##{controller_name}", :target => "_blank"
    %li= link_to t('.logout'), logout_path
