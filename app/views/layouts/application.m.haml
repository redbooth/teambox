%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
%head
  %title Teambox
  %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
  %meta{ :name => 'viewport', :content => 'width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;' }
  = csrf_meta_tag
  = stylesheet_link_tag 'mobile', :media => :all

%body{ :class => "#{location_name} #{I18n.locale} #{ENV['RAILS_ENV']}"}
  #header
    = render 'shared/header'
    = navigation(@current_project,current_user.projects,current_user.recent_projects)
  #content
    - if @current_project
      = render 'shared/project_navigation', :project => @current_project
    = yield
  #footer
    =# link_to "Use full Teambox", root_path
    = link_to "Log out", logout_path