!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en", :lang=>"en" }
  %head
    %meta{ 'http-equiv' => "content-type", :content => "text/html;charset=utf-8" }
    %title
      Teambox
      =@page_title
    = stylesheet_link_tag 'application', :media => "all"
    = sprockets_include_tag
    - javascript_tag do
      = yield :js_templates
  %body{ :class => "#{location_name} #{I18n.locale} #{ENV['RAILS_ENV']}"}
    .container
      = header
      = global_navigation
      = hot_flashes(flash)
      = navigation(@current_project,@recent_projects)
      .wrapper
        - unless location_name?(['welcome_users','new_projects','show_users','edit_users','new_avatars'])
          = project_navigation(@current_project)
        - if @content_for_banner
          .banner
            = yield :banner
        %div{ :class => @content_for_column.nil? ? 'content_wrap_single' : 'content_wrap' }
          .content#content
            = yield
        - if @content_for_column
          .column_wrap
            .column#column
              = yield :column
            = profile_completeness
          .clear
      = footer
    = javascripts