#primer{:style => (primer_hidden ? 'display:none' : nil)}
  %p= t('.empty')
  .box
    - if project.editable?(current_user)
      %h2= link_to t('.create_first'), new_project_task_list_path(project), {:class => 'create_first_task_list_link'}.merge(show_new_task_list(project))
    %p= t '.define'
    %ul
      %li= t '.item1'
      %li= t '.item2'
      %li= t '.item3'
      %li= t '.item4'
    %p= t '.footer1' 
    %p= t '.footer2'