%h3= t('.title')
%p= t('.task')
.name.text_field
  = f.label :name, t('.name')
  = f.text_field :name, :autofocus => true
  = last_comment_input
- if task.new_record?
  %p.optional= t('.optional')
  .body.text_field
    = f.label :body, t('.body')
    = f.text_area :body, :rows => 3
  .assigned_to.text_field
    = f.label :assigned_id, t('.assigned_to')
    = f.select :assigned_id, options_for_people(project.people)
.pick_date
  = f.label :due_on, t('.due_on')
  = date_picker(f, :due_on)