.text_field.name
  = f.label :name, t('.name')
  = f.text_field :name
  = errors_for conversation, :name

- if conversation.new_record?
  .text_area.body
    = f.label :body, t('.body')
    = f.text_area :body, :id => :conversation_body
    .autocomplete{ :style => 'display:none' }
    .previewBox.textilized{:style => 'display:none'}
    = errors_for conversation, :body
    - tooltip t('.body')
