- if recent_conversations.any?
  .recent_conversations
    %h2= t('.title')
    - for conversation in recent_conversations[0..3]
      = link_to conversation, project_conversation_path(project,conversation), :class => 'conversation'
    - if recent_conversations.count > 3
      = link_to t('.view_all'), project_conversations_path(project), :class => 'view_all'
    = link_to t('.new'), new_project_conversation_path(project), :class => 'new'
