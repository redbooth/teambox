.name.text_field
  = f.label :name, t('projects.fields.name')
  = errors_for project, :name
  = f.text_field :name
.permalink.text_field
  = f.label :permalink, t('projects.fields.permalink')
  = errors_for project, :permalink
  = f.text_field :permalink
  = permalink_example(project.permalink)
  = watch_permalink_example
.check_box.archived
  = f.check_box :archived
  = f.label :archived, t('projects.fields.archived')
- if time_tracking_enabled?
  .check_box.archived
    = f.check_box :tracks_time
    = f.label :tracks_time, t('projects.fields.tracks_time')
  .check_box.archived
    = f.check_box :public
    = f.label :public, t('projects.fields.public_project')
